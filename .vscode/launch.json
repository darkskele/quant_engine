{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug engine_tests",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/debug/tests/engine_unit_tests",
      "args": [],
      "cwd": "${workspaceFolder}",
      "stopAtEntry": false,
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "preLaunchTask": "Build Debug"
    },
    {
      "name": "Release engine_tests",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/release/tests/engine_unit_tests",
      "args": [],
      "cwd": "${workspaceFolder}",
      "stopAtEntry": false,
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "preLaunchTask": "Build Release"
    },
    {
      "name": "Run benchmark",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/release/benchmarks/engine_benchmarks",
      "args": ["--benchmark_format=console"],
      "cwd": "${workspaceFolder}",
      "stopAtEntry": false,
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "preLaunchTask": "Build Release"
    }
  ]
}
